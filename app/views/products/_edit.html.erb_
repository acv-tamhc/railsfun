<%= simple_form_for @product do |f| %>
	<%= f.input :title, input_html: { maxlength: 20, minlength: 5 } %>
	<%= f.input :description, input_html: { maxlength: 20, minlength: 5 } %>
	<%= f.input :level %>
	<%= f.input :price %>
	<%= f.input :published %>
	<%= f.association :category %>
	<%= f.button :submit %>
<% end %>