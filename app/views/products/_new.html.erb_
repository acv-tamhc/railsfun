<%= simple_form_for @product do |f| %>
	<%= f.input :title, placeholder: 'Enter product title', input_html: { maxlength: 20, minlength: 5 } %>
	<%= f.input :description, placeholder: 'Enter product description', input_html: { maxlength: 20, minlength: 5  } %>
	<%= f.input :level, prompt: 'Select a level'  %>
	<%= f.input :price, placeholder: 'Enter a price' %>
	<%= f.input :published%>
	<%= f.association :category, prompt: 'Select a category' %>
	<%= f.button :submit %>
<% end %>